{
  "siteName": "Tech News Portal",
  "domain": "localhost:3000",
  "language": "pl",
  "niche": "Technologia i AI",
  "seedKeywords": [
    "sztuczna inteligencja",
    "programowanie",
    "aplikacje mobilne",
    "cyberbezpieczeństwo",
    "cloud computing",
    "web development",
    "UI/UX design",
    "blockchain",
    "machine learning",
    "internet rzeczy"
  ],
  "layout": {
  "homepage": "magazine",
  "article": "standard",
  "list": "grid"
},
  "branding": {
    "primaryColor": "#3b82f6",
    "secondaryColor": "#60a5fa",
    "accentColor": "#2563eb",
    "backgroundColor": "#0a0a0b",
    "logoUrl": "/logo.svg",
    "faviconUrl": "/favicon.ico"
  },
  "content": {
    "articlesPerGeneration": 5,
    "articleLength": "medium",
    "writingStyle": "professional",
    "generateFaq": false,
    "faqQuestionsCount": 2,
    "minInternalLinks": 2,
    "maxInternalLinks": 4
  },
  "externalLinks": {
    "enabled": true,
    "allowedDomains": [
      {
        "domain": "wikipedia.org",
        "anchors": [
          "Dowiedz się więcej",
          "Zobacz definicję",
          "Czytaj dalej"
        ]
      },
      {
        "domain": "github.com",
        "anchors": [
          "Kod źródłowy",
          "Repozytorium",
          "Zobacz na GitHub"
        ]
      }
    ],
    "maxExternalLinksPerArticle": 1
  },
  "seo": {
    "defaultMetaTitle": "{title} - {siteName}",
    "defaultMetaDescription": "Odkryj najnowsze informacje na temat: {topic}",
    "ogImageWidth": 1200,
    "ogImageHeight": 630,
    "twitterCard": "summary_large_image"
  },
  "generation": {
    "batchSize": 3,
    "autoGenerate": false,
    "imageProvider": "unsplash",
    "imageFallback": "placeholder"
  },
  "admin": {
    "enabled": true
  }
}

